# PostgreSQL
POSTGRES_USER=marconi_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=marconi

# Backend
DATABASE_URL=postgresql://marconi_user:your_secure_password_here@localhost:5432/marconi

# Session
SESSION_COOKIE_NAME=marconi_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax

# Superadmin
SUPERADMIN_EMAILS=admin@example.com,lecturer@example.com
SUPERADMIN_PASSWORD=your_bootstrap_password_here

# CORS
CORS_ALLOW_ORIGINS=https://your-frontend-domain.com

# Redis
REDIS_URL=redis://localhost:6379/0

# Token encryption (Fernet key; generate with: python -c "import base64,os; print(base64.urlsafe_b64encode(os.urandom(32)).decode())")
TOKEN_ENCRYPTION_KEY=replace_with_generated_fernet_key

# JOBE
# Must include `/restapi` (commonly `/jobe/index.php/restapi`).
# If using `backend/docker-compose.yml` (with the JOBE container service), the default is:
#   http://jobe/jobe/index.php/restapi
JOBE_BASE_URL=https://your-jobe-server.com/jobe/index.php/restapi
JOBE_TIMEOUT_SECONDS=20
JOBE_GRADING_CPUTIME_SECONDS=10
JOBE_GRADING_MEMORYLIMIT_MB=256
JOBE_GRADING_STREAMSIZE_MB=0.064
JOBE_ALLOWED_LANGUAGES=c,cpp

# Docker
DOCKER_IMAGE=your-dockerhub-username/marconi-backend
DOCKER_TAG=latest
BACKEND_PORT=32316

# Frontend
NEXT_PUBLIC_API_URL=http://localhost:8000
