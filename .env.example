# PostgreSQL
POSTGRES_USER=marconi_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=marconi

# Backend
DATABASE_URL=postgresql://marconi_user:your_secure_password_here@localhost:5432/marconi

# Session
SESSION_COOKIE_NAME=marconi_session
SESSION_COOKIE_SECURE=true
SESSION_COOKIE_SAMESITE=lax

# Superadmin
SUPERADMIN_EMAILS=admin@example.com,lecturer@example.com
SUPERADMIN_PASSWORD=your_bootstrap_password_here

# CORS
CORS_ALLOW_ORIGINS=https://your-frontend-domain.com

# JOBE
JOBE_BASE_URL=https://your-jobe-server.com/restapi
JOBE_TIMEOUT_SECONDS=20
JOBE_ALLOWED_LANGUAGES=c,cpp

# Docker
DOCKER_IMAGE=your-dockerhub-username/marconi-backend
DOCKER_TAG=latest
BACKEND_PORT=8000
